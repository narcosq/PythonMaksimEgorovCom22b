def count_bob_occurrences(s):
    count = 0
    for i in range(len(s) - 2):
        if s[i:i+3] == 'bob':
            count += 1
    return count

if __name__ == "__main__":
    s = input("Enter the string: ")
    occurrences = count_bob_occurrences(s)
    print("Number of times bob occurs is:", occurrences)
